<script>
        $.ajax({
            url: "/Home/GetPizzaJson",
            type: 'GET',
            success: function (pizza) {
                str = "";
                for (let i = 0; i < pizza.length; i++) {
                    str += ` <div class="my-flex-block">
                        <img class="Image"  src="/Images/${pizza[i].src}" alt"${pizza[i].title}" />
                        <p class="Title">${pizza[i].title}</p>
                        <p class="Composition">${pizza[i].description}</p>
                        <p class="Price">${pizza[i].price}</p>
                    </div>`
                }
                $(".Pizza-product-container").html(str)
            }
        });
</script>



